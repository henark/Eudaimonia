{
  "version": 2,
  "builds": [
    {
      "src": "eudaimonia_backend/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
    },
    {
      "src": "eudaimonia_frontend/next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "eudaimonia_backend/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "eudaimonia_frontend/$1"
    }
  ]
}
